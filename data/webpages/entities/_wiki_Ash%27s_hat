    function insertSortableAdInArticle(adGoalPos, adId) {
        if (document.body.scrollHeight >= adGoalPos) {
            var adInsertionPoint = findInsertionPoint(adGoalPos);
            if (document.getElementById('upper-article') == null) {
                var adElement = document.createElement('div');
                adElement.id = 'upper-article';
                adInsertionPoint.parentNode.insertBefore(adElement, adInsertionPoint.nextSibling);
            }
        }
    }


    if (!location.pathname.startsWith('/wiki/User')) {
        if (!isMobileOrTablet()) {
            var contentBox = document.getElementById('contentbox');
            var contentSize = contentBox.offsetHeight;
            var firstBannerGoal = window.innerHeight * 2;

            var bfl = document.getElementById('bottomframelower');
            //bfl.id = 'div-gpt-ad-1498167603841-9';

            if (contentSize > 2000) {
                insertSortableAdInArticle(firstBannerGoal, 'leaderboard_3');
            }
        }
    }




